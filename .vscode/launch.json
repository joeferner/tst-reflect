{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "ttsc - tests",
            "program": "${workspaceFolder}/node_modules/.bin/ttsc",
            "args": [
                "-p",
                "./tests/tsconfig.json"
            ],
            "outFiles": [
                "${workspaceFolder}/tests/dist/**",
                "${workspaceFolder}/transformer/dist/**",
                "${workspaceFolder}/runtime/dist/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "jest",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--runInBand",
                "--no-cache"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/tests/dist/**",
                "${workspaceFolder}/transformer/dist/**",
                "${workspaceFolder}/runtime/dist/**"
            ]
        }
    ]
}